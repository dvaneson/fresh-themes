{{#section "writing"}}
<section id="writing">
  {{#> header-writing }}
  {{> header-simple _title="WRITING" _section="writing" }}
  {{/header-writing}}
  {{#each r.writing }}
  {{#> body-writing }}
  <div class="template-body">
    <div class="inline">
      <h3>
        {{#if url}}
        <a href="{{{ url }}}"><b>{{ title }}</b></a>
        {{else}}
        <b>{{ title }}</b>
        {{/if}}
      </h3>
      <span class="tenure">{{date date "MMM DD, YYYY"}}</span>
    </div>

    <h3>
      <em>
        {{{ stringOrObject publisher "name"  }}}
      </em>
    </h3>

    {{{ summary }}}
    {{> highlights }}
  </div>
  {{/body-writing}}
  {{/each}}
</section>
{{/section}}