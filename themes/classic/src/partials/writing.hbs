{{#section "writing"}}
<section id="writing">
  {{#> header-writing }}
    {{> header-icon _title="WRITING" _section="writing" _hdricon=(lookup . '_icon') }}
  {{/header-writing}}
  {{#each r.writing }}
    {{#> body-writing }}
    <div>
      <h3>
        <em>
        {{#if url}}
          <a href="{{{ url }}}">{{{ title }}}</a>
        {{else}}
          {{{ title }}}
        {{/if}}
        </em>
      </h3>
      <div class="inline">
        <h3>{{stringOrObject publisher "name" }}</h3>
        <span class="tenure">{{dateRange . 'MMM YYYY'}}</span>
      </div>
      {{{ summary }}}
      {{> highlights }}
    </div>
    {{/body-writing}}
  {{/each}}
</section>
{{/section}}
